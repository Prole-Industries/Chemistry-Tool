<Window x:Class="Chemistry_Tool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chemistry_Tool"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1024">
    <Grid Background="#FF252525">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="33*"/>
            <ColumnDefinition Width="34*"/>
            <ColumnDefinition Width="33*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <ScrollViewer HorizontalAlignment="Stretch" Grid.Column="0" Grid.RowSpan="2" Margin="10,10,10,10" Template="{DynamicResource GenericScroll}" Background="#44999999">
            <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10">
                <Button
                    Content="Reversible Reaction Tool"
                    Click="AppLoader"
                    Style="{DynamicResource GenericButton}"/>

                <Button
                    Content="More Tools coming soon..."
                    Style="{DynamicResource GenericButton}"
                    IsEnabled="False"/>
            </StackPanel>
        </ScrollViewer>
        <Grid x:Name="AppData" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Grid.Column="2" Margin="0,10,10,0" Background="#44999999" Visibility="Hidden">
            <TextBlock x:Name="AppName" Text="Application Name" Style="{DynamicResource GenericTextBox}"/>
            <Button VerticalAlignment="Bottom" Content="Launch" Click="LaunchApp" Style="{DynamicResource GenericButton}"/>
        </Grid>
        <Grid VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2" Margin="0,0,7,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Style="{DynamicResource GenericButton}" Content="About"             Padding="0,2" Grid.Column="0" Click="EH_About"/>
            <Button Style="{DynamicResource GenericButton}" Content="Settings"          Padding="0,2" Grid.Column="1" Click="EH_OpenSettings"/>
            <Button Style="{DynamicResource GenericButton}" Content="Prole Industries"  Padding="0,2" Grid.Column="2" Click="EH_GoToWebsite"/>
        </Grid>
    </Grid>
</Window>
